/**index.wxss**/
page{
  width:100%;
}

/* 轮播图宽高 */

.swiper-size{
  height: 300rpx;
}

.slide-image {
  width: 100%;
  height: 300rpx;
}

/* common */

.bordern {
  border-top: 6rpx solid#eee;
  border-bottom: 6rpx solid#eee;
}

.center {
  text-align: center;
  margin: auto;
}

/* 水平 */

.hor {
  display: flex;
}

.forcast {
  justify-content: space-around;
  padding: 35rpx;
  background-color: #fff;
}

/* 内容提示条 */

.borderl {
  border-left: 6rpx solid#11fc11;
}

.word {
  margin-left: 10rpx;
  display: flex;
  padding: 5rpx;
  font-size: initial;
}

/* 分割线 */

.borderb {
  border-bottom: 1rpx solid #eee;
}

.red {
  color: #ff9430;
}

.b {
  font-weight: bold;
}

.arrows {
  width: 50rpx;
  height: 50rpx;
  margin-left: 20rpx;
}

