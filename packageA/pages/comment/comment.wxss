/* pages/comment/comment.wxss */
page{
  height: 100%;
  width: 100%;
}

.bg {
  background-color: rgba(252, 244, 221, 0.747);
  display: flex;
  justify-content: space-around;
  flex-direction: column;
  align-content: center;
  height: 100%;
  width: 100%;
  z-index: -1;
}

.h1 {
  display: flex;
  justify-content: center;
  align-content: center;
}

.hour {
  font-size: x-large;
  font-weight: bold;
  color: gray;
  margin-top: 100rpx;
}

.byd {
  font-size: small;
  vertical-align: middle;
}

.bydd {
  flex-direction: column;
  justify-content: center;
  align-content: center;
  width: 600rpx;
  vertical-align: middle;
  display: flex;
  margin-top: 100rpx;
  margin-left: 50rpx;
}

.box {
  display: flex;
  justify-content: center;
  align-content: center;
  /* margin-top: 100rpx; */
}

.textarea {
  border: 2rpx solid darkgrey;
  padding: 0 15rpx;
  background-color: #fff;
  width: 80%;
  font-size: 28rpx;
}
