.btn {
  height: 80rpx;
  width: 600rpx;
  background-color: rgb(20, 102, 255);
  display: flex;
  justify-content: center;
  align-content: center;
  margin-top: 200rpx;
}

.sub {
  color: white;
  font-size: large;
}

.ntc {
  display: flex;
  bottom: 0rpx;
  margin-top: 180rpx;
  margin-left: 30rpx;
}

.ntc2 {
  color: darkgray;
  font-size: x-small;
}

.hover {
  background: rgb(0, 79, 226);
}
