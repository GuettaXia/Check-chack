page {
  height: 100%;
  width: 100%;
}

.plane_graph {
  background-color: rgba(252, 252, 252, 0.267);
  /* height: 100vh; */
}

/* 扫码替代按钮，正式版请删除 */

.temporary-button {
  position: fixed;
  bottom: 33%;
  opacity: 5;
}

/* 座位信息卡片 */

.seat-infocard {
  display: flex;
  left: 1%;
  flex-direction: column;
  width: 98%;
  height: 32%;
  position: fixed;
  bottom: 0;
  background-color: white; 
  margin-bottom: 1%;
  border-radius: 10rpx;
}

.separate-line {
  border: 2rpx solid orange;
}

.seat-num-box {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 90rpx
}

.seat-num {
  color: rgb(0, 0, 0);
  font-size: large;
  justify-content: center;
}

.seat-notice-box {
  display: flex;
  width: 100%;
  height: 200rpx;
  justify-content: center;
  align-items: center;
}

.seat-notice-word {
  color: black;
  font-size: medium;
}

.submit {
  position: absolute;
  width: 100%;
  bottom: 0;
  background-color: #04f;
  color: white;
  font-size: large;
}
