/* pages/library/floor.wxss */

/* common */

.center {
  text-align: center;
}

.roomnumb {
  font-size: medium;
  font-weight: bold;
  /* display: flex; */
  flex-direction: column;
  height: 25rpx;
}

.seats {
  font-size: smaller;
  display: flex;
  flex-direction: column;
  /* height: 0rpx; */
}

.hor {
  display: flex;
}

.line {
  justify-content: space-around;
  align-content: center;
  padding: 10rpx;
}

.button {
  width: 340rpx;
  height: 80rpx;
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
}

.Rooms {
  margin-top: 20rpx;
}

.bigpic {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

/* 按钮颜色 */

.bcp {
  background-color: pink;
  box-shadow: 0rpx 3rpx 1rpx 0.1rpx rgb(88, 88, 88);
}

.bcg {
  background-color: pink;
  box-shadow: 0rpx 3rpx 1rpx 0.1rpx rgb(88, 88, 88);
}

.forcast {
  display: flex;
  justify-content: space-around;
  padding: 35rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
  border-left: 5rpx solid #11fc11;
}

.b {
  font-weight: bold;
}

.red {
  color: #f75000;
}

/* Quick Start */

.qsb {
  margin-top: 40px;
  width: 80%;
  background-color: rgb(252, 126, 67);
  color: white;
  border-radius: 98rpx;
}

.hover {
  background: rgb(236, 179, 156);
}

/* notice */

.warn {
  height: 60rpx;
  width: 60rpx;
  margin: 30rpx 30rpx;
}

.nbox {
  display: flex;
  flex-direction: column;
  border: 2rpx solid orange;
  bottom: 0rpx;
  position: fixed;
  height: 310rpx;
  background-color: oldlace;
}

.notice1 {
  display: flex;
  align-content: center;
}

.ntc {
  font-size: initial;
  margin: 10rpx 50rpx;
  margin-bottom: 30rpx;
  color: rgb(73, 73, 73);
}

.ntc2 {
  align-content: center;
  margin-top: 30rpx;
  color: rgb(73, 73, 73);
}
